<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-language" content="es">
    <title>
        <%= title %>
    </title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="./stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/nouislider.min.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/slick.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/slick-theme.css" />
    <link rel="stylesheet" type="text/css" href="./stylesheets/style.css" />

    <script type="text/javascripts" src="./javascripts/slick.min.js"></script>
    <script type="text/javascripts" src="./javascripts/nouislider.min.js"></script>
    <script type="text/javascripts" src="./javascripts/jquery.zoom.min.js"></script>
    <script type="text/javascripts" src="./javascripts/main.js"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        .carousel {
            background: #2f4357;
            margin-top: 20px;
        }

        .carousel .item {
            min-height: 280px;
            /* Prevent carousel from being distorted if for some reason image doesn't load */
        }

        .carousel .item img {
            margin: 0 auto;
            /* Align slide image horizontally center */
        }

        .bs-example {
            margin: 20px;
        }

        .overlay-pro {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-color: rgba(79, 0, 110, 0.692);
        }

        #over:hover .overlay-pro {
            opacity: 1;
        }

        .overlay-text {
            color: white;
            font-size: 15px;
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>

</head>

<body>
    <!-- HEADER -->
    <% include ./Shared/Header %>
        <!-- /HEADER -->

        <!-- NAVIGATION -->
        <% include ./Shared/Navbar %>
            <!-- /NAVIGATION -->


            <div class="section">
                <div class="container">
                    <div class="col-md-12 bs-example">
                        <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
                            <!-- Carousel indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>
                            <!-- Carousel items -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="http://drive.google.com/uc?export=view&id=1tz3a9LLx_iyP9_szHapJMH4dua19DA27" alt="Foto-NO-Disponible" class="img-responsive"
                                        style="height:500px;width: 100%">
                                    <div class="carousel-caption">
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="http://drive.google.com/uc?export=view&id=16AOJ0hQFu-FRnd9XXvlJ2S6DUqTEutPg" alt="Foto-NO-Disponible" class="img-responsive"
                                        style="height:500px;width: 100%">
                                    <div class="carousel-caption">
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="http://drive.google.com/uc?export=view&id=1jWAFV1EQ1KFkCImc6edbNABeboU0lXC3" alt="Foto-NO-Disponible" class="img-responsive"
                                        style="height:500px;width: 100%">
                                    <div class="carousel-caption">
                                    </div>
                                </div>
                            </div>
                            <!-- Carousel nav -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECTION -->
            <div class="section">
                <!-- container -->
                <div class="container">
                    <!-- row -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="section-title text-center">
                                <h3 class="title">Más vendidos</h4>
                            </div>

                            <div class="products-widget-slick row" data-nav="#slick-nav-3">
                                <% for( var i = 0; i < documentos.length; i++) { %>
                                    <!-- product widget -->
                                    <div class="product col-md-4" style="height: 380px;">
                                        <div id="over" class="product-img">
                                            <a href="/detalleProducto/<%= documentos[i].ID %>">
                                                <img src="./imagesProductos/<%= documentos[i].imagen %>" alt="Foto-NO-Disponible" class="img-responsive" style="height: 200px; width: 100%;">
                                            </a>
                                            <div class="overlay-pro">
                                                <p class="overlay-text">Autor :
                                                    <%= documentos[i].autor %>
                                                </br>
                                                    Tecnología :
                                                    <%= documentos[i].tecnologia %>
                                                </br>
                                                    Descripción :
                                                    <%= documentos[i].descripcion %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name">
                                                <%= documentos[i].titulo %>
                                            </h3>
                                            <hr>
                                            <p class="product-category">Vendidos :
                                                <%= documentos[i].vendidos %> u</p>
                                            <p class="product-category">Existencia :
                                                <%= documentos[i].existencia %> u</p>
                                            <h4 class="product-price">$
                                                <%= documentos[i].precio %>
                                                    <!--<del class="product-old-price">$<%= documentos[i].precio %></del>-->
                                            </h4>
                                        </div>
                                    </div>
                                    <!-- /product widget -->
                                    <%}%>
                            </div>
                        </div>
                        <div class="clearfix visible-sm visible-xs"></div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /container -->
            </div>


            <!-- HOT DEAL SECTION -->
            <div id="hot-deal" class="section">
                <!-- container -->
                <div class="container">
                    <!-- row -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="hot-deal">
                                <ul class="hot-deal-countdown">
                                    <li>
                                        <div>
                                            <h3>02</h3>
                                            <span>Días</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div>
                                            <h3>10</h3>
                                            <span>Horas</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div>
                                            <h3>34</h3>
                                            <span>Minutos</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div>
                                            <h3>60</h3>
                                            <span>Segundos</span>
                                        </div>
                                    </li>
                                </ul>
                                <h2 class="text-uppercase">trato especial esta semana</h2>
                                <p>Nueva colección hasta 50% de descuento</p>
                                <a class="primary-btn cta-btn" href="/login">Comprar ahora</a>
                            </div>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /container -->
            </div>
            <!-- /HOT DEAL SECTION -->

            <!-- SECTION -->

            <!-- FOOTER -->
            <% include ./Shared/Footer %>
                <!-- /FOOTER -->
</body>

</html>